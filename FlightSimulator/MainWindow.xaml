<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
        xmlns:Views="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d"
        Title="FlightSimulator" Height="600" Width="1200" >
    <!-- The main window. -->
    <DockPanel>
        <TextBlock Text ="Flight Simulator" FontWeight="Heavy" FontSize="25" DockPanel.Dock="Top" HorizontalAlignment="Center">
        </TextBlock>
        <Grid>
        <!-- Default grid values. -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Views:FlightBoard></Views:FlightBoard>
        </Grid>
        <Grid Grid.Column="1">
            <TabControl FontWeight="Heavy" FontSize="20">
                    <!-- The manual tab. -->
                    <TabItem Header="Manual">
                    <Views:Manual></Views:Manual>
                </TabItem>
                <!-- The auto pilot tab. -->
                <TabItem Header="Auto Pilot">
                    <Views:AutoPilot></Views:AutoPilot>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
    </DockPanel>
</Window>
